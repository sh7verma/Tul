<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/toolbar_second" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/rg_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingStart="@dimen/_15sdp">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:checked="true"
                android:drawablePadding="@dimen/_10sdp"
                android:text="English"
                android:textSize="@dimen/_13sdp" />
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_french"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="French"
                android:textSize="@dimen/_13sdp" />
            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_german"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="German"
                android:textSize="@dimen/_13sdp" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_italian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="Italian"
                android:textSize="@dimen/_13sdp" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_romanian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="Romanian"
                android:textSize="@dimen/_13sdp" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rb_spanish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="Spanish"
                android:textSize="@dimen/_13sdp" />


        </RadioGroup>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        android:layout_marginRight="@dimen/_24sdp">

        <customviews.RegularTextView
            android:id="@+id/txt_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_ripple"
            android:gravity="center"
            android:paddingBottom="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:text="@string/done"
            android:textAllCaps="true"
            android:textColor="@color/white_color" />
    </LinearLayout>


</LinearLayout>