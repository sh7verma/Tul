<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:weightSum="10">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rl_preferences_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_inner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_ripple"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <customviews.RegularTextView
                        android:id="@+id/tv_preferences_available_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available"
                        android:textAllCaps="true"
                        android:textColor="@color/hint_color_dark" />

                    <customviews.SemiboldTextView
                        android:id="@+id/tv_preferences_available"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/only_weekends"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/ll_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_start_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/white_ripple"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <customviews.RegularTextView
                            android:id="@+id/tv_preferences_start_time_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/start_time"
                            android:textAllCaps="true"
                            android:textColor="@color/hint_color_dark" />


                        <customviews.SemiboldTextView
                            android:id="@+id/tv_preferences_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--:--"
                            android:textAllCaps="true"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_color"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:id="@+id/ll_time_left"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.05"
                            android:background="@color/light_grey"
                            android:orientation="horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_end_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/white_ripple"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <customviews.RegularTextView
                            android:id="@+id/tv_preferences_end_time_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/end_time"
                            android:textAllCaps="true"
                            android:textColor="@color/hint_color_dark" />


                        <customviews.SemiboldTextView
                            android:id="@+id/tv_preferences_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--:--"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_color"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:id="@+id/ll_time_right"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.05"
                            android:background="@color/light_grey"
                            android:orientation="horizontal" />

                    </LinearLayout>
                </LinearLayout>

                <customviews.SemiboldTextView
                    android:id="@+id/tv_tul_available_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/tul_delivery_available"
                    android:textAllCaps="true"
                    android:textColor="@color/black_color"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_delivery_charges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_ripple"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <customviews.RegularTextView
                        android:id="@+id/tv_delivery_charges_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_charges_within_5_miles"
                        android:textColor="@color/hint_color_dark" />

                    <customviews.SemiboldTextView
                        android:id="@+id/tv_delivery_charges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/black_color"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.05"
                        android:background="@color/light_grey"
                        android:orientation="horizontal"
                        android:textAllCaps="true" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view3_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/ll_delivery_earning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_ripple"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <customviews.RegularTextView
                            android:id="@+id/tv_delivery_earning_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_charges_earning"
                            android:textColor="@color/hint_color_dark" />

                        <customviews.SemiboldTextView
                            android:id="@+id/tv_delivery_earning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="0"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_color"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_your_earning_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/white_ripple"
                        android:padding="@dimen/_5sdp"
                        android:src="@mipmap/ic_info" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/ll_pickup_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <customviews.RegularTextView
                        android:id="@+id/txt_delivery_pickup_time_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tul_delivery_pickup_time"
                        android:textAllCaps="true"
                        android:textColor="@color/hint_color_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <customviews.SemiboldTextView
                            android:id="@+id/txt_delivery_pickup_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_ripple"
                            android:hint="@string/start_time"
                            android:textAllCaps="true"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_color"
                            android:textStyle="bold" />

                        <customviews.SemiboldTextView
                            android:id="@+id/txt_delivery_pickup_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_ripple"
                            android:hint="@string/end_time"
                            android:textAllCaps="true"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_color"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_grey"
                        android:orientation="horizontal" />

                    <customviews.RegularTextView
                        android:id="@+id/txt_hint_charges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/if_you_want_the_tul_to_be_delivered_further_than_5_miles_please_contact_lender"
                        android:textColor="@color/hint_color_dark" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>


</LinearLayout>
