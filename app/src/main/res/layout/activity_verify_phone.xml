<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_ripple"
            android:padding="@dimen/_20"
            android:visibility="invisible"
            android:src="@mipmap/ic_cancel" />

        <customviews.BoldTextView
            android:id="@+id/txt_verify_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="@dimen/_20"
            android:paddingLeft="@dimen/_20"
            android:paddingRight="@dimen/_20"
            android:text="@string/verfication_hint_msg"
            android:textColor="@color/white_color"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20"
            android:layout_marginLeft="@dimen/_20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_code_1"
                    android:layout_width="@dimen/_40"
                    android:layout_height="@dimen/_40"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5"
                    android:paddingLeft="@dimen/_12"
                    android:paddingRight="@dimen/_12"
                    android:paddingTop="@dimen/_10"
                    android:textColor="@color/white_color"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_color" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/_5"
                android:layout_height="@dimen/_5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_code_2"
                    android:layout_width="@dimen/_40"
                    android:layout_height="@dimen/_40"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5"
                    android:paddingLeft="@dimen/_12"
                    android:paddingRight="@dimen/_12"
                    android:paddingTop="@dimen/_10"
                    android:textColor="@color/white_color"
                   />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_color" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/_5"
                android:layout_height="@dimen/_5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_code_3"
                    android:layout_width="@dimen/_40"
                    android:layout_height="@dimen/_40"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5"
                    android:paddingLeft="@dimen/_12"
                    android:paddingRight="@dimen/_12"
                    android:paddingTop="@dimen/_10"
                    android:textColor="@color/white_color"
                   />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_color" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/_5"
                android:layout_height="@dimen/_5" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_code_4"
                    android:layout_width="@dimen/_40"
                    android:layout_height="@dimen/_40"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_5"
                    android:paddingLeft="@dimen/_12"
                    android:paddingRight="@dimen/_12"
                    android:paddingTop="@dimen/_10"
                    android:textColor="@color/white_color"
                   />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_color" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_color_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_12"
            android:paddingBottom="@dimen/_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <customviews.SemiboldTextView
                android:id="@+id/txt_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20"
                android:layout_marginRight="@dimen/_16"
                android:background="@drawable/grey_default"
                android:paddingBottom="@dimen/_5"
                android:paddingLeft="@dimen/_16"
                android:paddingRight="@dimen/_16"
                android:paddingTop="@dimen/_5"
                android:text="@string/call"
                android:textColor="@color/hint_color_dark"
                 />

            <customviews.SemiboldTextView
                android:id="@+id/txt_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20"
                android:background="@drawable/grey_default"
                android:paddingBottom="@dimen/_5"
                android:paddingLeft="@dimen/_16"
                android:paddingRight="@dimen/_16"
                android:paddingTop="@dimen/_5"
                android:text="@string/resend"
                android:textAllCaps="true"
                android:textColor="@color/hint_color_dark"
                />

            <customviews.SemiboldTextView
                android:id="@+id/txt_timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00"
                android:textColor="@color/white_color"
                 />


            <customviews.SemiboldTextView
                android:id="@+id/txt_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_ripple"
                android:paddingBottom="@dimen/_5"
                android:paddingLeft="@dimen/_16"
                android:paddingRight="@dimen/_16"
                android:paddingTop="@dimen/_5"
                android:text="@string/done"
                android:textAllCaps="true"
                android:visibility="invisible"
                android:textColor="@color/white_color"
               />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/img_verify_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_verify" />
</RelativeLayout>