<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_rule"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/ll_inside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_color"
            android:orientation="vertical">

            <customviews.MaterialEditText
                android:id="@+id/et_dialog_write_rule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_12"
                android:layout_weight="1"
                android:gravity="top"
                android:hint="@string/enter_rule"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="5"
                app:met_floatingLabel="normal"
                app:met_floatingLabelAnimating="true"
                app:met_floatingLabelText="@string/enter_rule"
                app:met_floatingLabelTextColor="@color/hint_color_dark"
                app:met_hideUnderline="true"
                app:met_textColor="@color/black_color"
                app:met_textColorHint="@color/hint_color_dark" />


            <LinearLayout
                android:id="@+id/ll_dialog_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_dialog_rule_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/hint_color_dark"
                    android:text="@string/cancel"
                    android:textColor="@color/white_color"
                    android:textStyle="bold" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <Button
                    android:id="@+id/bt_dialog_rule_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/black_color"
                    android:text="@string/add"
                    android:textColor="@color/white_color"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>