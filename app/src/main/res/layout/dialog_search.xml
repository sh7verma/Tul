<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crop__ic_cancel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/white_ripple"
            android:orientation="horizontal">

            <customviews.RegularTextView
                android:id="@+id/tv_option1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/only_weekends"
                android:textColor="@color/black_color" />

            <ImageView
                android:id="@+id/img_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_tick"
                android:visibility="invisible" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:orientation="horizontal">

        </View>

        <LinearLayout
            android:id="@+id/ll_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/white_ripple"
            android:orientation="horizontal">

            <customviews.RegularTextView
                android:id="@+id/tv_option2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weekdays"
                android:textColor="@color/black_color"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/img_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_tick"
                android:visibility="invisible" />

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:orientation="horizontal"/>

        <LinearLayout
            android:id="@+id/ll_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/white_ripple"
            android:orientation="horizontal">

            <customviews.RegularTextView
                android:id="@+id/tv_option3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/both"
                android:textColor="@color/black_color"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/img_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_tick"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
