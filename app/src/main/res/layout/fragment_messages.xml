<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <customviews.SemiboldTextView
        android:id="@+id/txt_no_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="@dimen/_10"
        android:drawableTop="@mipmap/ic_no_message"
        android:text="@string/no_message_yet"
        android:textAllCaps="true"
        android:textColor="@color/hint_color_dark" />

</RelativeLayout>