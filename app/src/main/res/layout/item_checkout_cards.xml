<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_ripple"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_ripple"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_card" />


        <customviews.RegularTextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint=" **** **** **** ****"
            android:inputType="number" />


        <customviews.RegularTextView
            android:id="@+id/tv_card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:layout_weight="1"
            android:hint="1234"
            android:inputType="number"
            android:textColorHint="@color/black_color" />


        <EditText
            android:id="@+id/ed_cvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/stroke_background"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="CVV"
            android:imeOptions="actionNone"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/img_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:src="@mipmap/ic_radio_btn" />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color_light" />

</LinearLayout>