<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_ripple"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_marginRight="@dimen/_8"
    android:background="@color/colorPrimary">

    <customviews.RippleBackground
        android:id="@+id/rippleBackground"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:rb_color="#8CFFFFFF"
        app:rb_duration="5000"
        app:rb_radius="30dp"
        app:rb_rippleAmount="4"
        app:rb_scale="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <customviews.BoldTextView
            android:id="@+id/txt_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:elevation="@dimen/_3"
            android:text="5"
            android:textAllCaps="true"
            android:textColor="@color/white_color"
            android:visibility="gone" />

        <customviews.SemiboldTextView
            android:id="@+id/txt_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_3"
            android:text="@string/active_bookings"
            android:textAllCaps="true"
            android:textColor="@color/white_color" />
    </LinearLayout>
</RelativeLayout>