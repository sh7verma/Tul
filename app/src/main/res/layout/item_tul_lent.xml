<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_5">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_no_image" />

                <customviews.RegularTextView
                    android:id="@+id/tv_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/img_user"
                    android:layout_toRightOf="@+id/img_user"
                    android:text="Rented"
                    android:textAllCaps="true"
                    android:textColor="@color/hint_color_dark" />

                <customviews.SemiboldTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_owner"
                    android:layout_toEndOf="@+id/img_user"
                    android:layout_toRightOf="@+id/img_user"
                    android:text="Devid"
                    android:textColor="@color/black_color" />

                <customviews.RegularTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="11 August"
                    android:textColor="@color/hint_color_dark" />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint_color_light" />


            <LinearLayout
                android:id="@+id/ll_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <customviews.SemiboldTextView
                        android:id="@+id/tv_tul_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Devid"
                        android:textColor="@color/black_color" />

                    <customviews.SemiboldTextView
                        android:id="@+id/tv_tul_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/black_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_dots"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_dot1"
                            android:layout_width="@dimen/_12"
                            android:layout_height="@dimen/_12"
                            android:layout_gravity="bottom"
                            android:src="@drawable/black_circle" />

                        <View
                            android:id="@+id/view_line1"
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_24"
                            android:layout_gravity="center"
                            android:background="@color/black_color" />

                        <ImageView
                            android:id="@+id/img_dot2"
                            android:layout_width="@dimen/_12"
                            android:layout_height="@dimen/_12"
                            android:layout_gravity="top"
                            android:src="@drawable/black_circle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_delivery_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <customviews.SemiboldTextView
                            android:id="@+id/tv_delivery_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:textAllCaps="true"
                            android:text="@string/booking_date"
                            android:textColor="@color/black_color" />

                        <customviews.RegularTextView

                            android:id="@+id/tv_delivery_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7 August"
                            android:textColor="@color/hint_color_dark" />

                        <customviews.SemiboldTextView
                            android:id="@+id/tv_return_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="@string/return_date"
                            android:textAllCaps="true"
                            android:textColor="@color/black_color" />

                        <customviews.RegularTextView
                            android:id="@+id/tv_return_date"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="11 August"
                            android:textColor="@color/hint_color_dark" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/img_tul_received_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_tick_c" />

                <customviews.SemiboldTextView
                    android:id="@+id/tv_tul_recieved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/img_tul_received_check"
                    android:layout_toRightOf="@+id/img_tul_received_check"
                    android:text="@string/tul_handed"
                    android:textColor="@color/black_color" />

                <customviews.RegularTextView
                    android:id="@+id/tv_tul_recieved_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tul_recieved"
                    android:layout_toEndOf="@+id/img_tul_received_check"
                    android:layout_toRightOf="@+id/img_tul_received_check"
                    android:text="TUL Received"
                    android:textColor="@color/hint_color_dark" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/img_tul_rreturned_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_tick_c" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <customviews.SemiboldTextView
                        android:id="@+id/tv_tul_returned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/tul_received"
                        android:textColor="@color/black_color" />

                    <customviews.RegularTextView
                        android:id="@+id/tv_tul_returned_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUL Returned"
                        android:textColor="@color/hint_color_dark" />

                </LinearLayout>

                <customviews.SemiboldTextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black_color"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/white_color" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>